<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactListXamarin.ListPage">

    <ListView ItemsSource="{Binding ContactList}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell 
                    Text="{Binding Name}"
                    Detail="{Binding Phone}" >
                    
                    <!--El text cell hereda el binding
                        de ListView, así que podemos poner
                        los atributos de la clase Contact
                        directamente, porque estamos accediendo 
                        al tipo de dato de la lista, que precisamente es
                        el de esa clase. -->
                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>
